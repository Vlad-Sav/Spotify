@model Playlists
@{
    <button class="btn btn-primary my-4" onclick="@("window.location.href='" + @Url.Action("ChooseSong","Playlist", new { playlistId = Model.Id}) + "'");">Add To Playlists</button>
    @foreach (var i in ViewBag.Songs)
    {
        <div class="d-flex align-items-center justify-content-between bg-gray ">
            <div class="d-flex align-items-center justify-content-between w-100">
                <span class="fw-bold h4 ">@i.Artists - @i.SongName</span>
                <div class="d-flex align-items-center justify-content-between bg-gray ">
                    <audio controls class="align-self-end">
                        <source src="@i.Path" type="audio/mpeg">
                    </audio>
                    <button class="btn btn-primary" onclick="@("window.location.href='" + @Url.Action("DeleteFromPlaylist","Playlist", new { songId = i.SongId, playlistId = Model.Id}) + "'");">Delete From Album</button>
                </div>

            </div>

        </div>
    }
}