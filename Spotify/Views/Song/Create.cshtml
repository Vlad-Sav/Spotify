@model Spotify.Models.ViewModels.CreateSongViewModel

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>CreateSongViewModel</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="SongName" class="control-label"></label>
                <input asp-for="SongName" class="form-control" />
                <span asp-validation-for="SongName" class="text-danger"></span>
            </div>
            <label class="control-label">Do you have co-authors?</label>

            <div class="form-group select-block">
                <div class=" select-orig">
                    <div class="form-group select-artist">

                        <select asp-for="ArtistsId" asp-items="ViewBag.Artists"></select>

                    </div>
                </div>
            </div>

            <button type="button" class="btn btn-success btn-add-line">Add line</button>


            <div class="form-group">
                <label lass="control-label">Audio File</label>
                <label>

                    <input asp-for="File" type='file' accept="audio/*" placeholder="">
                </label>
                <span asp-validation-for="File" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Add" class="btn btn-primary" />
            </div>
        </form>
</div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>
<script>
   
    let btnAddLine = document.querySelector('.btn-add-line');
    let form = document.querySelector('.select-block');
    let formCreate = form.innerHTML;
    btnAddLine.onclick = () => {

        form.innerHTML += formCreate;
    };
    btnDeleteLine.onclick = () => {
        
        form.removeChild(form.lastChild);
    }


</script>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
