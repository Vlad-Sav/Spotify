@model Spotify.Models.ViewModels.SerachViewModel

@{
    ViewData["Title"] = "Index";
}

<h1>Search</h1>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Index">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="SearchText" class="control-label"></label>
                <input asp-for="SearchText" class="form-control" />
                <span asp-validation-for="SearchText" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Mode" class="control-label"></label>
                <select asp-for="Mode" asp-items="ViewBag.Modes"></select>
                <span asp-validation-for="Mode" class="text-danger"></span>
            </div>
            
            <div class="form-group">
                <input asp-action="Search" type="submit" value="Search" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
