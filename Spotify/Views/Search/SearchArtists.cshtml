@model IEnumerable<Spotify.Models.Artists>

@{
    ViewData["Title"] = "SearchArtists";
}

<h1>Search Artists</h1>

<table class="table">
    <thead>
        <tr>
         
            <th>
                @Html.DisplayNameFor(model => model.ArtistName)
            </th>
            <td>

            </td>
     
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
          
            <td>
                @Html.DisplayFor(modelItem => item.ArtistName)
            </td>
         
            <td>
                @Html.ActionLink("Open", "ArtistsSongs", new {  artistId=item.Id })
            </td>
        </tr>
}
    </tbody>
</table>
